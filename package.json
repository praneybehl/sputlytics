{
  "name": "sputlytics",
  "description": "Sputlytics is an open-source and self-hosted analytics platform built with Meteor",
  "version": "0.0.1",
  "scripts": {
    "start": "NODE_ENV=development meteor",
    "lint": "eslint ."
  },
  "devDependencies": {
    "eslint": "^2.4.0",
    "eslint-plugin-meteor": "^3.2.0"
  },
  "repository": "git@github.com:sputlytics/sputlytics.git",
  "license": "MIT",
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "plugins": [
      "eslint-plugin-meteor"
    ],
    "extends": ["plugin:meteor/recommended"],
    "rules": {
      "meteor/no-session": "off",
      "semi": [
        2,
        "never"
      ]
    },
    "env": {
      "meteor": true,
      "node": true,
      "browser": true
    },
    "globals": {
      "Meteor": false,
      "Session": false
    }
  }
}
