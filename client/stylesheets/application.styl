@keyframes loadingAnim {
  0 {
    transform rotate(0deg)
  }
  100% {
    transform rotate(360deg)
  }
}

html, body
  overflow-x hidden

.loading-box
  margin-top 50px
  text-align center
  h2
    color #a9a9a9

  .loading
    position relative
    width 50px
    height 50px
    margin 0 auto
    border 3px solid #a9a9a9
    border-radius 100%

    .loading-ball-holder
      position absolute
      width 12px
      height 45px
      left 15px
      top 0px
      animation: loadingAnim 1.3s linear infinite

      .loading-ball
        position absolute
        top -8px
        left 0
        width 15px
        height 15px
        border-radius 100%
        background #898989

.accounts-bg
  background-color #37B0DB
  width 100%
  height 100%
  position absolute
  top 0
  left 0

.navbar-brand
  padding 8px 10px !important
